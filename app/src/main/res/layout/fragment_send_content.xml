<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/content_shape">


    <Button
        android:id="@+id/button_send_id"
        android:layout_width="@dimen/inner_content_width"
        android:layout_height="100dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/ic_send"
        android:paddingStart="30dip"
        android:paddingEnd="26dip"
        android:text="enter id"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/button_send_qr"
        android:layout_width="@dimen/inner_content_width"
        android:layout_height="100dp"
        android:layout_marginBottom="@dimen/fab_margin"
        android:background="@drawable/button"
        android:drawableStart="@drawable/ic_qr_code"
        android:paddingStart="30dip"
        android:paddingEnd="26dip"
        android:text="scann qr"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button_send_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/inner_content_width"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:background="@drawable/image_view"
        android:contentDescription="@string/image_view_content_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/imageViewText"
        android:layout_width="@dimen/inner_content_width"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_folder_open"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="30dip"
        android:paddingEnd="26dip"
        android:text="tap to select"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />


</androidx.constraintlayout.widget.ConstraintLayout>