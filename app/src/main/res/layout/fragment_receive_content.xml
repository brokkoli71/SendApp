<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/content_shape"
    >



    <Button
        android:id="@+id/button_receive"
        android:layout_width="@dimen/inner_content_width"
        android:layout_height="100dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/button"
        android:drawableStart="@drawable/ic_send"
        android:paddingStart="30dip"
        android:paddingEnd="26dip"
        android:text="enter id"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_qr_generate"
        android:layout_width="@dimen/inner_content_width"
        android:layout_height="100dp"
        android:layout_marginBottom="@dimen/fab_margin"
        android:background="@drawable/button"
        android:drawableStart="@drawable/ic_qr_code"
        android:paddingStart="30dip"
        android:paddingEnd="26dip"
        android:text="generate qr"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button_receive"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/inner_content_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:background="@drawable/image_view"
        android:contentDescription="@string/image_view_content_description"
        android:minHeight="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>