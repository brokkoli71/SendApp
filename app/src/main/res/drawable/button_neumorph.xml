<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="false" >
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="200dp" android:height="100dp"/>
                    <corners android:radius="@dimen/round_corners" />
                    <padding android:left="20dp" android:bottom="0dp" android:top="20dp" android:right="0dp"/>
                </shape>
            </item>
            <item  >
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/shadowNeumorph"
                        android:endColor="@android:color/transparent"
                        android:type="radial"
                        android:gradientRadius="200%p"
                        android:centerY="0.6"
                        android:centerX="0.6"
                        />
                    <corners android:radius="@dimen/round_corners" />
                    <padding android:left="-20dp" android:bottom="20dp" android:top="-20dp" android:right="20dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/lightedNeumorph"
                        android:endColor="@color/contentNeumorph"
                        android:type="radial"
                        android:gradientRadius="200%p"
                        android:centerY="0.4"
                        android:centerX="0.4"
                        />
                    <corners android:radius="@dimen/round_corners" />
                    <padding android:left="10dp" android:bottom="-10dp" android:top="10dp" android:right="-10dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="@color/shadowNeumorph"
                        android:endColor="@color/contentNeumorph"
                        android:angle="135"
                        />
                    <corners android:radius="@dimen/round_corners" />
                    <padding android:left="10dp" android:bottom="10dp" android:top="10dp" android:right="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item  android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/round_corners" />
                    <padding android:left="20dp" android:bottom="0dp" android:top="20dp" android:right="0dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/lightedNeumorph" />
                    <corners android:radius="@dimen/round_corners" />
                    <padding android:left="-20dp" android:bottom="20dp" android:top="-20dp" android:right="20dp"/>
                </shape>
            </item>
            <item >
                <shape android:shape="rectangle">
                    <solid android:color="@color/shadowNeumorph" />
                    <corners android:radius="@dimen/round_corners" />
                    <padding android:left="10dp" android:bottom="-10dp" android:top="10dp" android:right="-10dp"/>
                </shape>
            </item>
            <item android:id="@+id/image_view_drawable" >
                <shape android:shape="rectangle">
                    <solid android:color="@color/contentNeumorph"/>
                    <corners android:radius="@dimen/round_corners" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>