<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/image_view_drawable" >
        <shape android:shape="rectangle">
            <solid android:color="@color/colorCircle"/>
            <corners android:radius="@dimen/round_corners" />
        </shape>
    </item>
    <item android:id="@+id/image_view_border">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/round_corners" />
            <stroke android:color="@android:color/black" android:width="5px" />
        </shape>
    </item>
</layer-list>