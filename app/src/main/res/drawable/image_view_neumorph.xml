<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/round_corners" />
            <padding android:left="10dp" android:bottom="0dp" android:top="10dp" android:right="0dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/lightedNeumorph" />
            <corners android:radius="@dimen/round_corners" />
            <padding android:left="-10dp" android:bottom="10dp" android:top="-10dp" android:right="10dp"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/shadowNeumorph" />
            <corners android:radius="@dimen/round_corners" />
            <padding android:left="5dp" android:bottom="-5dp" android:top="5dp" android:right="-5dp"/>
        </shape>
    </item>
    <item android:id="@+id/image_view_drawable" >
        <shape android:shape="rectangle">
            <solid android:color="@color/contentNeumorph"/>
            <corners android:radius="@dimen/round_corners" />
        </shape>
    </item>
</layer-list>